<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.xja.dao.RoleMapper">
    <select id="selectById" parameterType="Integer" resultType="role">
        SELECT id,role_name as roleName,note FROM role WHERE id =#{id}
    </select>
    <select id="findAll" resultType="role">
        SELECT id,role_name as roleName,note FROM role
    </select>
    <insert id="add" parameterType="role">
        insert into role(id,role_name,note) values(#{id},#{roleName},#{note})
    </insert>
    <delete id="delete" parameterType="Integer">
        delete from role where id = #{id}
    </delete>
    <update id="update">
        update role set role_name=#{roleName},note=#{note} where id=#{id}
    </update>
</mapper>